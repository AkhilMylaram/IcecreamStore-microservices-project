{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "auth-route": {
                "ClusterId": "auth-cluster",
                "Match": {
                    "Path": "/api/auth/{**remainder}"
                }
            },
            "user-route": {
                "ClusterId": "user-cluster",
                "Match": {
                    "Path": "/api/users/{**remainder}"
                }
            },
            "product-route": {
                "ClusterId": "product-cluster",
                "Match": {
                    "Path": "/api/products/{**remainder}"
                }
            },
            "order-route": {
                "ClusterId": "order-cluster",
                "Match": {
                    "Path": "/api/orders/{**remainder}"
                }
            },
            "payment-route": {
                "ClusterId": "payment-cluster",
                "Match": {
                    "Path": "/api/payments/{**remainder}"
                }
            },
            "inventory-route": {
                "ClusterId": "inventory-cluster",
                "Match": {
                    "Path": "/api/inventory/{**remainder}"
                }
            },
            "notification-route": {
                "ClusterId": "notification-cluster",
                "Match": {
                    "Path": "/api/notifications/{**remainder}"
                }
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://auth-service:8081"
                    }
                }
            },
            "user-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://user-service:8082"
                    }
                }
            },
            "product-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://product-service:8000"
                    }
                }
            },
            "order-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://order-service:8083"
                    }
                }
            },
            "payment-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://payment-service:8083"
                    }
                }
            },
            "inventory-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://inventory-service:8084"
                    }
                }
            },
            "notification-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://notification-service:8001"
                    }
                }
            }
        }
    }
}
